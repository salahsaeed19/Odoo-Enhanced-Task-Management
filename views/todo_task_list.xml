<odoo>
    <record id="view_todo_tasks_tree" model="ir.ui.view">
        <field name="name">todo.task.tree</field>
        <field name="model">todo.task</field>
        <field name="website_id" eval="1" />
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="is_completed"/>
            </tree>
        </field>
    </record>
</odoo>